#include "DHT.h"

#define DHTPIN 4        // Pino do sinal do DHT11 no ESP32 (alterar conforme seu circuito)
#define DHTTYPE DHT11   // Tipo do sensor (DHT11 ou DHT22)

DHT dht(DHTPIN, DHTTYPE);

void setup() {
  Serial.begin(115200);  
  dht.begin();
  Serial.println("Iniciando leitura do DHT11...");
}

void loop() {
  float humidity = dht.readHumidity();
  float temperature = dht.readTemperature(); // Celsius

  // Verifica se houve erro na leitura
  if (isnan(humidity) || isnan(temperature)) {
    Serial.println("Falha ao ler do DHT11");
    return;
  }

  Serial.print("Temperatura: ");
  Serial.print(temperature);
  Serial.println(" Â°C");

  Serial.print("Umidade: ");
  Serial.print(humidity);
  Serial.println(" %");

  Serial.println("---------------------------");

  delay(2000); // Leitura a cada 2 segundos
}
