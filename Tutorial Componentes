POTENCIOMETRO:
#define pin_pot x
 Void setup:
 pinMode(pin_pot, INPUT);

Void loop:
  int pot = analogRead(pin_pot);
    if (pot < 1365) setRGB(1, 0, 0);      // vermelho
    else if (pot < 2730) setRGB(1, 1, 0); // amarelo
    else setRGB(0, 0, 1);                 // azul
