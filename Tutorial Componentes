BOTÃO:
#define botão x 
volatile bool ligado = true;
  void IRAM_ATTR trocaEstado() {    //função para inverter um estado definido quando apertar o botão
    ligado = !ligado;
  }
pinMode(botao, INPUT_PULLUP); 
attachInterrupt(digitalPinToInterrupt(botao), trocaEstado, FALLING);


// --- Flag do botão ---
volatile bool botaoPressionado = false;

// --- Interrupção do botão ---
void IRAM_ATTR isrBotao() {
  botaoPressionado = true;
}



No void loop:

// --- Tratamento do botão ---
  if (botaoPressionado) {
    botaoPressionado = false;
    sistemaAtivo = !sistemaAtivo;
    if (!sistemaAtivo) {
      setRGB(0, 0, 0);
      digitalWrite(BUZZER, LOW);
      btLedAtivo = false;
      tempAtiva = false;
      detectorAtivo = false;
      buzzerAtivo = false;
      Serial.println("Sistema desligado pelo botão!");
    } else {
      tempAtiva = true;
      detectorAtivo = true;
      buzzerAtivo = true;
      Serial.println("Sistema reativado!");
    }
  }

  if (!sistemaAtivo) {
    delay(500);
    return;
  }
