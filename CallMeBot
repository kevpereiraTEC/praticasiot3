#include <WiFi.h>
#include <HTTPClient.h>

// ----------- CONFIGURAÇÕES -----------
const char* ssid = "Wokwi-GUEST";
const char* password = "";

// Substitua pelos seus dados do CallMeBot
String phoneNumber = "5500000000000";   // Ex: 5511999999999
String apiKey = "123456";               // API KEY recebida no WhatsApp
// --------------------------------------

// Função para enviar mensagem
void enviarWhatsApp(String mensagem) {

  if (WiFi.status() == WL_CONNECTED) {
    HTTPClient http;

    // Monta a URL do CallMeBot
    String url = "https://api.callmebot.com/whatsapp.php?phone=" 
                 + phoneNumber + 
                 "&text=" + urlencode(mensagem) + 
                 "&apikey=" + apiKey;

    Serial.println("Enviando mensagem...");
    Serial.println(url);  // Para debug

    http.begin(url);

    int httpCode = http.GET();

    if (httpCode == 200) {
      Serial.println("✔ Mensagem enviada com sucesso!");
    } else {
      Serial.print("❌ Erro ao enviar mensagem: ");
      Serial.println(httpCode);
    }

    http.end();
  } 
  else {
    Serial.println("WiFi não conectado.");
  }
}

// Função simples para converter espaços e caracteres especiais
String urlencode(String str) {
  String encoded = "";
  char c;
  char code0, code1;

  for (int i = 0; i < str.length(); i++) {
    c = str.charAt(i);
    if (isalnum(c)) {
      encoded += c;
    } else {
      encoded += '%';
      code0 = (c >> 4) & 0xF;
      code1 = c & 0xF;
      encoded += char(code0 > 9 ? code0 - 10 + 'A' : code0 + '0');
      encoded += char(code1 > 9 ? code1 - 10 + 'A' : code1 + '0');
    }
  }
  return encoded;
}

void setup() {
  Serial.begin(115200);

  // Conecta ao Wi-Fi
  Serial.println("Conectando ao WiFi...");
  WiFi.begin(ssid, password);

  while (WiFi.status() != WL_CONNECTED) {
    Serial.print(".");
    delay(300);
  }

  Serial.println("\nWiFi conectado!");
  Serial.print("IP: ");
  Serial.println(WiFi.localIP());

  // ENVIA UMA MENSAGEM DE TESTE
  enviarWhatsApp("Olá! Mensagem enviada pelo ESP32!");
}

void loop() {
  // Nada aqui
}
